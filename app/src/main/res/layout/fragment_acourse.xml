<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AcourseFragment">


    <TextView
        android:id="@+id/grade_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="Enter your course grade"
        android:padding="10dp"
        android:textColorHint="#7A7070"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/creditload_txt"
        app:layout_constraintTop_toBottomOf="@id/grade_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:id="@+id/creditload_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Load"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/creditload_txt"
        app:layout_constraintTop_toBottomOf="@id/grade"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/creditload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="Enter the course credit load"
        android:padding="10dp"
        android:textColorHint="#7A7070"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/creditload_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:id="@+id/result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/creditload"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="Your course GPA will be  displayed here"
        android:padding="10dp"
        android:textColorHint="#7A7070"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/result_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>