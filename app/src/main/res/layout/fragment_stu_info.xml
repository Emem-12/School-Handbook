<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.StuInfoFragment">
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the following information correctly"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
app:layout_constraintTop_toBottomOf="@id/details"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="your name"
        android:padding="10dp"
        android:textColorHint="#7A7070"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@id/dept_txt"
        app:layout_constraintTop_toBottomOf="@id/name_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:id="@+id/dept_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="your department"
        android:padding="10dp"
        android:textColorHint="#7A7070"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/dept_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:id="@+id/session_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/department"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_txt"
        android:hint="session of payment"
        android:padding="10dp"
        android:textColorHint="#7A7070"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/session_txt"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_btn"
        android:layout_width="267dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/session"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Proceed"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:layout_marginTop="60dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>